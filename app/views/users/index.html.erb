<% if current_user.role == 'patient' %>
  <h1>patient</h1>
  <% @doctors.each do |user| %>
    <div class="card border-dark mb-3">
      <div class="card">
        <div class="card-body" style="background-color: #B0C4DE";>
          <p>name: <%= user.email %></p>
        </div>
      </div>
    </div>
  <% end %>
<% elsif current_user.role == 'doctor' %>
  <h1>doctor</h1>
  <% @patients.each do |user| %>
    <div class="card border-dark mb-3">
      <div class="card">
        <div class="card-body" style="background-color: #B0C4DE";>
          <p>name: <%= user.email %></p>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
