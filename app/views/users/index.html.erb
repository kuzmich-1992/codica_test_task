<div class="container">
  <div class="row">
    <div class="col-sm">
      <p>
      <h1><%=current_user.email%> profile </h1>
    </div>
    <div class="col-sm">
    <h2>create category</h2>
      <%= simple_form_for :category, :url => create_category_path, :method => :post do |f| %>
        <%= f.input :name %>
        <div class="btn btn-warning">
          <%= f.button :submit %>
        </div>
      <% end %>
    </div>
      <h2>
        <%= link_to 'Log Out', destroy_user_session_path, method: :delete %>
      </h2>
    </div>
  </div>
</div>
<% if current_user.role == 'patient' %>
  <%= render partial: '/layouts/users/patient' %>
<% elsif current_user.role == 'doctor' %>
  <%= render partial: '/layouts/users/doctor' %>
<% elsif current_user.role == 'admin' %>
  <%= render partial: '/layouts/users/admin' %>
<% end %>


